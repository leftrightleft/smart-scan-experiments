+    private Map<String, Map<String, Object>> toSerializableMap() {
+        HashMap<String, Map<String, Object>> hashMap = new HashMap<>();
+        hashMap.put(DATA_MAP_KEY, this.data);
+        hashMap.put(META_MAP_KEY, this.metadata);
+        return hashMap;
+    }
