+SUPPORT_DIR = Pathname.new(::File.join(::File.dirname(__FILE__), "support"))
+
+class JSONIOThingy < IO
+  def initialize; end
+  def flush; end
+
+  def puts(payload)
+    # Ensure that all log payloads are valid json.
+    LogStash::Json.load(payload)
+  end
+end
+
