+      runtime_mx_bean = ManagementFactory.getRuntimeMXBean()
+      metric.gauge([:jvm], :uptime_in_millis, runtime_mx_bean.getUptime())
+      collect_heap_metrics(data)
+      collect_non_heap_metrics(data)
+    end
 
