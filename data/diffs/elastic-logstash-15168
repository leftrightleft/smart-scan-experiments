+namespace "lint" do
+
+  module RuboCLI
+    def self.run!(*args)
+      require "rubocop"
+      cli = RuboCop::CLI.new
+      result = cli.run(["--force-exclusion", *args])
+      raise "Linting failed." if result.nonzero?
+    end
+  end
+
+  # task that runs lint report
+  task "report" do
+    RuboCLI.run!("--lint")
+  end
+
+  # task that automatically fixes code formatting
+  task "format" do
+    RuboCLI.run!("--fix-layout")
+  end
+end
