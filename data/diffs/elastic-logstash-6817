+        DeadLetterQueueWriteManager writer = new DeadLetterQueueWriteManager(dir, 1000, 1000000);
+
+        FileChannel channel = FileChannel.open(lockFilePath, StandardOpenOption.WRITE);
+        try {
+            channel.lock();
+            fail();
+        } catch (OverlappingFileLockException e) {
+            assertTrue(created);
+        } finally {
+            writer.close();
+        }
+    }
