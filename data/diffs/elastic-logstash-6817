+package org.logstash.common.io;
+
+public enum RecordType {
+    COMPLETE,
+    START,
+    MIDDLE,
+    END;
+
+    public byte toByte() {
+        switch (this) {
+            case COMPLETE:
+                return 'c';
+            case START:
+                return 's';
+            case MIDDLE:
+                return 'm';
+            case END:
+                return 'e';
+            default:
+                throw new RuntimeException("wat?");
+        }
+    }
+
+    public static RecordType fromByte(byte b) {
+        switch (b) {
+            case 'c':
+                return COMPLETE;
+            case 's':
+                return START;
+            case 'm':
+                return MIDDLE;
+            case 'e':
+                return END;
+            default:
+                return null;
+        }
+    }
+}
