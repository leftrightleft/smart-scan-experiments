+                        connection.setUseCaches(false);
+                        in = connection.getInputStream();
+                    }
+                }
+            } catch (IOException e){
+                LOGGER.warn("Unable to read alias definition in jar resources: {}", filePath, e);
+                return Collections.emptyMap();
+            }
