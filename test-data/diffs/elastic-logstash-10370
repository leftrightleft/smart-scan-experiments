+
+def start_agent(agent)
+  agent_task = Stud::Task.new do
+    begin
+      agent.execute
+    rescue => e
+      raise "Start Agent exception: #{e}"
+    end
+  end
+
+  wait(30).for { agent.running? }.to be(true)
+  agent_task
+end
+
+module LogStash
+  module Inputs
+    class DummyBlockingInput < LogStash::Inputs::Base
+      config_name "dummyblockinginput"
+      milestone 2
+
+      def register
+      end
+
+      def run(_)
+        sleep(1) while !stop?
+      end
+
+      def stop
+      end
+    end
+  end
+end
